<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303F9F"
    android:scrollbars="none" tools:context=".GetIt">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="600dp">

        <TextView android:text="@string/got_it"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:textSize="70sp"
            android:gravity="center"
            android:textColor="#009688"
            android:id="@+id/statusText"/>

        <TextView android:text="@string/nobody_got_it" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:textSize="60sp"
            android:gravity="center"
            android:textColor="#009688"
            android:visibility="invisible"
            android:id="@+id/messageText"/>

        <Button
            android:id="@+id/give_it"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="400dp"
            android:layout_centerHorizontal="true"
            android:text="@string/give_it"
            android:textSize="40sp"
            android:textColor="#303F9F"
            android:background="@drawable/give_it_selector"
            android:padding="10dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingTop="550dp"
            android:id="@+id/generations"
            android:paddingLeft="16dp">


        </LinearLayout>

        <ImageView
            android:id="@+id/map"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_map"
            android:layout_alignTop="@id/generations"
            android:layout_marginTop="550dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:tint="#009688"/>

    </RelativeLayout>
</ScrollView>